<%- include('../partials/header') %>
        <!-- Masthead-->
        <header class="masthead">
            <div class="container">
                <div class="masthead-subheading">Categories</div>
            </div>
        </header>
        <!-- Services-->
        <section class="page-section" id="categories">
            <p>These are the categories:</p>
                <ul>
                    <% categories.forEach(category => { %>
                     <li> <a href="categories/<%-category._id%>"><%=category.name%></a>
                    </li>
                    <% }) %>
                </ul>
                <form action="/categories" method="post">
                    <input class = "form-control input-lg" type="text" name="name"/>
                    <button class = "btn btn-lg btn-primary" type="submit">Add Category</button>
                  </form>    
            <!-- <form action="/categories/new">
                <button class="btn btn-primary">Add a category</button>
              </form> -->
        </section>
        <!-- Footer-->
<%- include('../partials/footer') %>