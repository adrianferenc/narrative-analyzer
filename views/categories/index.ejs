<%- include('../partials/header') %>
<!-- Masthead-->
<header class="masthead">
  <div class="container">
    <div class="masthead-subheading">Categories</div>
  </div>
</header>
<!-- Services-->
<section class="page-section" id="categories">
  <div class="container">
    <h5>These are the categories:</h5>
    <ul>
      <% categories.forEach(category => { %>
      <li><a href="categories/<%-category._id%>"><%=category.name%></a></li>
      <% }) %>
    </ul>
    <form action="/categories" method="post">
      <input
        class="form-control input-lg"
        placeholder="Enter a New Category"
        type="text"
        name="name"
      />
      <button class="btn btn-lg btn-primary" type="submit">Add Category</button>
    </form>
  </div>
</section>
<!-- Footer-->
<%- include('../partials/footer') %>
