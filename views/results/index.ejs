<%- include('../partials/header') %>
<!-- Masthead-->
<header class="masthead">
  <div class="container">
    <div class="masthead-subheading">Results</div>
  </div>
</header>
<!-- Services-->
<section class="page-section" id="results">
  <div class="container">
    <h3 class="d-flex justify-content-center">
      Select the categories you would like to have compared
    </h3>
    <form action="/results/" method="POST">
      <div class="d-flex justify-content-center my-4">
        <% categories.forEach((category,idx) => { %>
        <div class="form-check form-check-inline">
          <input
            class="form-check-input"
            type="checkbox"
            id="inlineCheckbox<%-idx%>"
            name="dimension-<%-idx%>"
            value="<%-category.name%>"
          />
          <label class="form-check-label" for="inlineCheckbox<%-idx%>"
            ><%=`${category.name}`%></label
          >
        </div>
        <% }) %>
      </div>
      <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">View Results</button>
      </div>
    </form>
  </div>
</section>
<!-- Footer-->
<%- include('../partials/footer') %>
